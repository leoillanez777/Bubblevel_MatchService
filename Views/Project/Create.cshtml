@model Bubblevel_MatchService.Models.Project

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntialDate" class="control-label"></label>
                <input asp-for="IntialDate" class="form-control" />
                <span asp-validation-for="IntialDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Duration" class="control-label"></label>
                <input type="hidden" id="Duration" name="Duration" v-model="select" />
                {{select}}
                <v-autocomplete v-model="select" variant="solo"
                                v-model:search="search"
                                item-title="state"
                                item-value="abbreviation"
                                :loading="loading"
                                :items="items"
                                hint="Write Hour if not exists"
                                clearable persistent-hint>
                </v-autocomplete>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input class="form-check-input" type="checkbox" asp-for="Closed">
                <label class="form-check-label control-label" asp-for="Closed">
                </label>
                <span asp-validation-for="Closed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("~/Views/Project/_ProjectVue.cshtml");
    }
}
