@model Bubblevel_MatchService.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-4">
                <label asp-for="Id" class="control-label"></label>
                <div class="alert alert-light">
                    @Html.DisplayFor(model => model.Id)
                </div>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="IntialDate" class="control-label"></label>
                <input asp-for="IntialDate" class="form-control" />
                <span asp-validation-for="IntialDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input class="form-check-input" type="checkbox" asp-for="Closed">
                <label class="form-check-label control-label" asp-for="Closed">
                </label>
                <span asp-validation-for="Closed" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
