@model Bubblevel_MatchService.Models.SupportIncident
@{
  ViewData["Title"] = "Re send email";
}

<h1>Re send email</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Email">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-4">
                <label asp-for="Summary" class="control-label"></label>
                <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="State" class="control-label"></label>
                <input type="hidden" asp-for="State" />
                <div class="block">
                    @Html.DisplayFor(item => item.State)
                </div>
            </div>
            <div class="form-group mt-4">
                <label asp-for="CustomerId" class="control-label"></label>
                <input type="hidden" asp-for="CustomerId" />
                <div class="block">
                    <div class="alert alert-secondary" role="alert">
                        @Html.DisplayFor(item => item.Customer.Name)
                    </div>
                </div>
            </div>
            <div class="form-group mt-4">
                <v-btn type="submit" variant="outlined" rounded color="blue">
                    <v-icon start icon="mdi-checkbox-marked-circle"></v-icon>
                    Send Email
                </v-btn>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("~/Views/SupportIncident/_IndexVue.cshtml");
    }
}


